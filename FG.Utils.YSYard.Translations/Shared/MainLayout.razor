@inherits LayoutComponentBase

@inject IDialogService MudDialog
@inject ICustomDialogService CustomDialog

<MudThemeProvider IsDarkMode=true Theme="MainTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="MudBlazor.Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        Translation Assistant
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Docked">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudPaper Square="true" Height="calc(100vh - 64px)" Style="background-color: var(--mud-palette-drawer-background); overflow: auto;">
            @Body
        </MudPaper>
    </MudMainContent>
</MudLayout>

@code {
    public MudTheme MainTheme
    {
        get;
    } = new()
        {
            Typography = new()
            {
                Default = new()
                {
                    FontFamily = new[] { "Yu Gothic UI", "sans-serif", "Poppins", "Helvetica", "Arial" }
                }
            }
        };

    protected override void OnInitialized()
    {
        base.OnInitialized();
        this.CustomDialog.MudDialog = this.MudDialog;
    }

    private bool _drawerOpen = false;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
